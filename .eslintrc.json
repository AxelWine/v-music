{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "extends": [
        "eslint:recommended"
    ],
    "plugins": [
        "jest"
    ],
    "rules": {
        "no-extra-semi": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "no-continue": [
            "off"
        ],
        "no-async-promise-executor": [
            "off"
        ],
        "no-await-in-loop": [
            "off"
        ],
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "max-len": [
            "warn",
            {
                "code": 120
            }
        ],
        "keyword-spacing": [
            "warn"
        ],
        "space-in-parens": [
            "warn",
            "never"
        ],
        "space-before-blocks": [
            "warn"
        ],
        "space-before-function-paren": [
            "warn",
            "never"
        ],
        "space-infix-ops": [
            "warn"
        ],
        "space-unary-ops": [
            "warn"
        ],
        "prefer-const": [
            "error"
        ],
        "prefer-arrow-callback": [
            "error"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "warn",
            2
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "no-trailing-spaces": [
            "warn"
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ]
    }
}