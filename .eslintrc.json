{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "plugins": [
        "jest",
        "import"
    ],
    "rules": {
        "no-extra-semi": [
            "off"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "warn",
            2
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "no-trailing-spaces": [
            "warn"
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "max-len": [
            "warn",
            {
                "code": 200
            }
        ],
        "arrow-parens": [
            "off"
        ],
        "eol-last": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "no-continue": [
            "off"
        ],
        "no-async-promise-executor": [
            "off"
        ],
        "no-await-in-loop": [
            "off"
        ]
    }
}